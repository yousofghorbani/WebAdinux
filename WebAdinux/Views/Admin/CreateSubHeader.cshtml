@using WebAdinux.Context.Enums;
@model WebAdinux.Core.ViewMoels.SiteSubHeaderViewModel

@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Create Header</h5>
</div>
<hr />
<form asp-action="CreateSubHeader" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Title" class="form-control" placeholder="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <input asp-for="Link" class="form-control" placeholder="Link" />
        <span asp-validation-for="Link" class="text-danger"></span>
        
        <div class="mb-3 form-group">
            @* <label asp-for="VisibleType" class="control-label"></label> *@
            <select asp-for="VisibleType" class="form-control">
                @foreach (Visible visible in (Visible[])Enum.GetValues(typeof(Visible)))
                {
                    <option value="@visible">@visible.ToString()</option>
                }
            </select>
        </div>
        

    </div>

    <div class="form-group">
        <input type="submit" value="Done" class="btn btn-success btn-block" />
    </div>
</form>