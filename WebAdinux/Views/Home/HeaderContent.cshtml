@model IEnumerable<WebAdinux.Core.ViewMoels.GetSiteContentViewModel>
@{
    ViewData["Title"] = "HeaderContent";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<section id="services" class="section-bg" style="margin-top:50px">
    <div class="container">

        <header class="section-header">
            <h3>@Model.FirstOrDefault(x=> x.ContentType == WebAdinux.Context.Enums.ContentType.h3Title).Title</h3>
            <h2>@Model.FirstOrDefault(x=> x.ContentType == WebAdinux.Context.Enums.ContentType.h2Title).Title</h2>
            <p>@Model.FirstOrDefault(x=> x.ContentType == WebAdinux.Context.Enums.ContentType.h2Title).Description</p>
            <h3>@Model.FirstOrDefault(x=> x.ContentType == WebAdinux.Context.Enums.ContentType.BoxTitle).Title</h3>
        </header>

        <div class="row justify-content-center align-items-center">
            @foreach (var item in Model.Where(x => x.ContentType == WebAdinux.Context.Enums.ContentType.Box))
            {
                <div class="col-md-6 col-lg-4 wow bounceInUp" data-wow-duration="1.4s">
                    <div class="box">
                        <div class="icon" style="background: #fceef3;"><i class="fa fa-@item.Icon" style="color: @item.Color"></i></div>
                        <h4 class="title"><a href="">@item.Title</a></h4>
                        <p class="description">@item.Description</p>
                    </div>
                </div>
            }
        </div>

        @foreach (var item in Model.Where(x => x.ContentType != WebAdinux.Context.Enums.ContentType.h3Title && x.ContentType != WebAdinux.Context.Enums.ContentType.h2Title && x.ContentType != WebAdinux.Context.Enums.ContentType.BoxTitle && x.ContentType != WebAdinux.Context.Enums.ContentType.SliderImg && x.ContentType != WebAdinux.Context.Enums.ContentType.Box).OrderBy(x => x.Number))
        {
            @if (item.ContentType == WebAdinux.Context.Enums.ContentType.h2)
            {
                <div class="justify-content-center align-items-center">
                    <h2>@item.Title</h2>
                    <p>@item.Description</p>
                </div>
                <div class="clearfix"></div>
            }
            @if (item.ContentType == WebAdinux.Context.Enums.ContentType.h3)
            {
                <div class="justify-content-center align-items-center">
                    <h3>@item.Title</h3>
                    <p>@item.Description</p>
                </div>
                <div class="clearfix"></div>
            }
            @if (item.ContentType == WebAdinux.Context.Enums.ContentType.h4)
            {
                <div class="justify-content-center align-items-center">
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                </div>
                <div class="clearfix"></div>
            }
            @if (item.ContentType == WebAdinux.Context.Enums.ContentType.Img)
            {
                <img class="d-block w-100 margin-top-50" src="~/Upload/@item.FileLink">
            }
            @if (item.ContentType == WebAdinux.Context.Enums.ContentType.Video)
            {
                <div class="embed-responsive embed-responsive-16by9 d-flex justify-content-center align-items-center margin-top-50">
                    <div>
                        <video class="demoVideo" controls style="width:90%; height:auto; box-sizing:border-box; object-fit:contain; overflow:clip;">
                            <source src="~/Upload/@item.FileLink" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                    
                </div>
            }
        }


        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Where(x => x.ContentType == WebAdinux.Context.Enums.ContentType.SliderImg).Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @{
                    bool first = true;
                }
                @foreach (var item in Model.Where(x => x.ContentType == WebAdinux.Context.Enums.ContentType.SliderImg))
                {

                    if (first)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Upload/@item.FileLink" alt="First slide">
                        </div>

                        first = false;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Upload/@item.FileLink" alt="Second slide">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

</section><!-- #services -->