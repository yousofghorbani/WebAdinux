<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="~/lib/bootstrap/rtl/bootstrap-rtl.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <link href="~/css/panel.css" rel="stylesheet" />

</head>
<body>

    <div class="page-wrapper chiller-theme toggled">

        <a href="#" id="show-sidebar" class="btn btn-sm btn-dark">
            <i class="fa fa-bars"></i>
        </a>

        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">

                <div class="sidebar-brand">

                    <a href="#">Adinux Panel</a>

                    <div id="close-sidebar">
                        <i class="fa fa-times"></i>
                    </div>

                </div>
                <div class="sidebar-header">

                    <div class="user-info">

                        <span class="user-name">

                        </span>
                        <span class="user-role">
                            Admin
                        </span>
                        <span class="user-status">
                            <i class="fa fa-circle"></i>
                            <span>Online</span>
                        </span>
                    </div>
                    <div class="user-pic">
                        <a href="/">
                            <img src="~/img/Adinux/cropped-icon-270x270.png" alt="Adinux" width="80" height="80" class="img-responsive" />
                        </a>
                    </div>

                </div>

                <div class="sidebar-menu">
                    <ul>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <span class="pull-right">Mails</span>
                                <span class="pull-left fa fa-telegram"></span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>

                                    <li>
                                        <a href="/Admin/RecivedMails">
                                            Recived Mails
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Admin/ArchivedMails/">
                                            Archived Mails
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <span class="pull-right">Content</span>
                                <span class="pull-left fa fa-newspaper-o"></span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>

                                    <li>
                                        <a href="/Admin/SiteHeaders">
                                            Site Headers
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                    </ul>
                </div>

                <div class="sidebar-footer">

                    <a href="/Admin/ShowBrands">
                        <i class="fa fa-bell"></i>
                        <span class="badge badge-pill badge-warning notification">4</span>
                    </a>

                    <a href="#">
                        <i class="fa fa-envelope"></i>
                        <span class="badge badge-pill badge-warning notification">1</span>
                    </a>

                    <a href="#">
                        <i class="fa fa-cog"></i>
                        <span class="badge badge-pill badge-warning notification">5</span>
                    </a>

                    <a href="/Admin/Logout">
                        <i class="fa fa-power-off"></i>
                    </a>


                </div>

            </div>
        </nav>

    </div>

    <div>
        @RenderBody()
    </div>

    <div id="myModal" class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div id="bodyModal" class="modal-body">
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/jquery-1.9.1.min.js"></script>
    @* <script src="~/lib/jquery/jquery-migrate.min.js"></script> *@
    <script src="~/lib/bootstrap/rtl/bootstrap-rtl.min.js"></script>
    <script src="~/js/panel.js"></script>
    @await RenderSectionAsync("mySection", false)

</body>
</html>
